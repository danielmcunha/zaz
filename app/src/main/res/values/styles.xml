<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">40dp</item>
        <item name="boxCornerRadiusTopEnd">40dp</item>
        <item name="boxCornerRadiusBottomStart">40dp</item>
        <item name="boxCornerRadiusBottomEnd">40dp</item>
    </style>


    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/shape_xxs_2_rounded</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="backgroundTint">@color/color_state_button</item>
    </style>

    <style name="Button.Bold" parent="Button">
        <item name="android:background">@drawable/shape_xxs_2_rounded</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Button.Bold.Xxs" parent="Button.Bold">
        <item name="android:layout_height">@dimen/xxl</item>
        <item name="android:textAppearance">@style/Montserrat.Medium.Xs</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Bold.Xs" parent="Button.Bold">
        <item name="android:layout_height">@dimen/xxl</item>
        <item name="android:textAppearance">@style/Montserrat.Medium.Xs</item>
    </style>

    <style name="Button.Xs" parent="Button">
        <item name="android:layout_height">@dimen/xxl</item>
        <item name="android:textAppearance">@style/Montserrat.Medium.Xs</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/orange</item>
        <item name="cornerRadius">@dimen/xxs_2</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.Outlined.Xs" parent="Button.Outlined">
        <item name="android:layout_height">@dimen/xxl</item>
        <item name="android:textAppearance">@style/Montserrat.Medium.Xs</item>
    </style>

    <style name="Button.Outlined.Xs.Orange" parent="Button.Outlined.Xs">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Theme.Zaz.Splash" parent="Theme.Zaz">
        <item name="android:windowBackground">@drawable/background_app_splash</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>
</resources>